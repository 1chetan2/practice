@model firstProgram.ViewModels.PaginatedList<firstProgram.Models.Student>

<h2>Student List</h2>

<a class="btn btn-success mb-3" asp-action="Create">Add New Student</a>

<table class="table table-striped table-bordered">

    <tr>
        <td colspan="5">
            <h4>Welcome @ViewBag.UserName</h4>
            <small>@ViewBag.UserEmail</small>
        </td>

    </tr>

    <tr>
        <th>Name</th>
        <th>Email</th>
        <th>Course</th>
        <th>Date</th>
        <th>Action</th>
    </tr>

    @foreach (var s in Model.Items)
    {
        <tr>
            <td>@s.StudentName</td>
            <td>@s.Email</td>
            <td>@s.Course</td>
            <td>@s.EnrollmentDate.ToShortDateString()</td>
            <td>
                <a asp-action="Edit" asp-route-id="@s.Id" class="btn btn-primary btn-sm">Edit</a>
                <a asp-action="Delete" asp-route-id="@s.Id" class="btn btn-warning btn-sm">Delete</a>
            </td>
        </tr>
    }
</table>

 <nav> 
    <ul class="pagination justify-content-center">

        <li class="page-item @(Model.HasPreviousPage ? "" : "disabled")">
            <a 
               asp-action="Index"
               asp-route-page="@(Model.PageIndex - 1)">
                Previous
            </a>
        </li>

        @for (int i = 1; i <= Model.TotalPages; i++)
        {
            <li class="page-item @(i == Model.PageIndex ? "active" : "")">
                <a class="page-link" asp-action="Index" asp-route-page="@i"> @i </a>
            </li>   
           
        }

        <li class="page-item @(Model.HasNextPage ? "" : "disabled")">
            <a
               asp-action="Index"
               asp-route-page="@(Model.PageIndex + 1)">
                Next
            </a>
        </li>

    </ul>
</nav>
