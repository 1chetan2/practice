@model firstProgram.ViewModels.PaginatedList<firstProgram.Models.Student>

<h2>Student List</h2>

<form asp-action="Index" method="get" class="mb-3">
    <div class="row">

        <div class="col-md-3">
            <input type="text"
                   name="searchString"
                   value="@ViewBag.CurrentFilter"
                   class="form-control"
                   placeholder="Search..." />
        </div>

        <div class="col-md-3">
            <select name="sortColumn" class="form-control">
                <option value="Id">Sort By</option>
                <option value="StudentName" selected="@(ViewBag.SortColumn == "StudentName")">Student Name</option>
                <option value="Email" selected="@(ViewBag.SortColumn == "Email")">Email</option>
                <option value="Course" selected="@(ViewBag.SortColumn == "Course")">Course</option>
                <option value="EnrollmentDate" selected="@(ViewBag.SortColumn == "EnrollmentDate")">Enrollment Date</option>
            </select>
        </div> 

        <div class="col-md-2">
            <select name="sortOrder" class="form-control">
                <option value="asc" selected="@(ViewBag.SortOrder == "asc")">Ascending Order</option> 
                <option value="desc" selected="@(ViewBag.SortOrder == "desc")">Descending Order</option> 
            </select>
        </div>
                
        <div class="col-md-3">
            <button class="btn btn-primary">Apply</button>
            <a asp-action="Index" class="btn btn-secondary">Reset</a>
            <a href="/Student/Create/"  class="btn btn-success">Add Data</a>
        </div>

    </div>
</form>

<table class="table table-striped">
    <tr> 
        <th>Name</th>
        <th>Email</th>
        <th>Course</th>
        <th>Date</th>
        <th>Action</th>
    </tr>

    @foreach (var s in Model.Items)
    {
        <tr>
                
            <td>@s.StudentName</td>
            <td>@s.Email</td>
            <td>@s.Course</td>
            <td>@s.EnrollmentDate.ToShortDateString()</td>
           <td> <a asp-action="Edit" asp-route-id="@s.Id" class="btn btn-primary btn-sm">Edit</a>
           <a asp-action="Delete" asp-route-id="@s.Id" class="btn btn-warning btn-sm">Delete</a></td>

        </tr>
    }
</table>

<ul class="pagination justify-content-center">
    <li class="page-item @(Model.HasPreviousPage ? "" : "disabled")">
        <a class="page-link"
           asp-action="Index"
           asp-route-page="@(Model.Page - 1)"
           asp-route-pageSize="@Model.PageSize"
           asp-route-searchString="@ViewBag.CurrentFilter"
           asp-route-sortColumn="@Model.SortColumn"
           asp-route-sortOrder="@Model.SortOrder">
            Prev
        </a>
    </li>
     
    @for (int i = 1; i <= Model.TotalPages; i++)
    {
        <li class="page-item @(i == Model.Page ? "active" : "")">
            <a class="page-link"
               asp-action="Index"
               asp-route-page="@i"
               asp-route-pageSize="@Model.PageSize"
               asp-route-searchString="@ViewBag.CurrentFilter"
               asp-route-sortColumn="@Model.SortColumn"
               asp-route-sortOrder="@Model.SortOrder">
                @i
            </a>
        </li>
    }

    <li class="page-item @(Model.HasNextPage ? "" : "disabled")">
        <a class="page-link"
           asp-action="Index"
           asp-route-page="@(Model.Page + 1)"
           asp-route-pageSize="@Model.PageSize"
           asp-route-searchString="@ViewBag.CurrentFilter"
           asp-route-sortColumn="@Model.SortColumn"
           asp-route-sortOrder="@Model.SortOrder">
            Next
        </a>
    </li>
    <li>
        <form asp-action="Index" method="get" class="mb-3">
              <select name="pageSize" onchange="this.form.submit()" class=" form-control w-100 h">
                <option value="3" selected="@(Model.PageSize == 3)">3</option>
                <option value="4" selected="@(Model.PageSize == 4)">4</option>
                <option value="10" selected="@(Model.PageSize == 10)">10</option>
            </select>
        </form>
    </li>
</ul>
<style>
    .h{
    height:40px;
    margin-left:5px;}
   
</style>
 

