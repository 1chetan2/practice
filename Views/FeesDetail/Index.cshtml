@model List<firstProgram.ViewModel.FeesDetailDto>

@{
    ViewBag.Title = "Fees List";
}

<h2>Fees List</h2>

<table class="table table-bordered">
    <thead>
        <tr>
            <th>Name</th>
            <th>Amount</th>
           
        </tr>
    </thead>
    <tbody>
        @foreach (var item in Model)
        {
            <tr>
                <td>@item.Name</td>
                <td>@item.Amount</td>
                <td>
                    <a asp-action="Details" asp-route-id="@item.Id" class="btn btn-primary">View</a>
                </td>
            </tr>
        }
        <tr><td>
            @* <a href="/FeesDetail/Details/" class="form-control">add</a> *@
        </td></tr>
    </tbody>
    
</table>
