@model IEnumerable<firstProgram.ViewModel.FeesDetailDto>

<h2>Fees Details</h2>

<a asp-action="Create" class="btn btn-success ">Add New</a> 

<table class="table table-bordered">
    <thead>
        <tr>
            <th>Name</th>
            <th>Amount</th>
        </tr>
    </thead>
    <tbody>
        @foreach (var item in Model)
        {
            <tr>
                <td>@item.Name</td>
                <td>@item.Amount</td>
            </tr>
        }
    </tbody>
</table>
